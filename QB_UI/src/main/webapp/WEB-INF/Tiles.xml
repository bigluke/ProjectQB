<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
	<definition name="home.*" template="/WEB-INF/views/user/layout.jsp">
		<put-attribute name="title" value="3TEAM"/>
		<put-attribute name="content" value="/WEB-INF/views/user/{1}.jsp"/>
	</definition>
	
	<definition name="noAuth.*" template="/WEB-INF/views/noAuth/layout.jsp">
		    <put-attribute name="title"   value="3Team" />
		    <put-attribute name="header"  value="/WEB-INF/views/noAuth/header.jsp"/>
		    <put-attribute name="footer"  value="/WEB-INF/views/noAuth/footer.jsp"/>
		    <put-attribute name="content" value="/WEB-INF/views/noAuth/{1}.jsp" />
	</definition>
	
	<definition name="admin.*" template="/WEB-INF/views/admin/inc/layout.jsp">
		    <put-attribute name="title"   value="welcome bitcamp" />
		    <put-attribute name="header"  value="/WEB-INF/views/admin/inc/header.jsp" />
		    <put-attribute name="footer"  value="/WEB-INF/views/admin/inc/footer.jsp" />
		     <put-attribute name="sidebar"  value="/WEB-INF/views/admin/inc/sidebar.jsp" />			    
		    <put-attribute name="content" value="/WEB-INF/views/admin/{1}.jsp" />
	</definition> 
	
	
 	<definition name="*.*" template="/WEB-INF/views/inc/layout.jsp">
		    <put-attribute name="title"   value="welcome bitcamp" />
		    <put-attribute name="header"  value="/WEB-INF/views/inc/header.jsp" />
		    <put-attribute name="footer"  value="/WEB-INF/views/inc/footer.jsp" />
		     <put-attribute name="sidebar"  value="/WEB-INF/views/inc/sidebar.jsp" />			    
		    <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />

	</definition>
	
	
</tiles-definitions>







  